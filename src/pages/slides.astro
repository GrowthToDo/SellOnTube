    <link href="https://fonts.googleapis.com/css2?family=Cormorant:wght@400;500;600;700&family=IBM+Plex+Sans:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        /* ========================================
           BASE RESET & VIEWPORT SETUP
           ======================================== */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            scroll-snap-type: y mandatory;
            scroll-behavior: smooth;
        }

        body {
            font-family: 'IBM Plex Sans', sans-serif;
            background: #0f0f0f;
            color: #f5f0e8;
            overflow-x: hidden;
        }

        /* ========================================
           SLIDE BASE STYLES
           ======================================== */
        .slide {
            height: 100vh;
            height: 100dvh;
            overflow: hidden;
            scroll-snap-align: start;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: clamp(2rem, 5vw, 4rem);
            position: relative;
        }

        /* ========================================
           GRADIENT SHAPES (Background elements)
           ======================================== */
        .gradient-shape {
            position: absolute;
            border-radius: 50%;
            filter: blur(100px);
            opacity: 0.35;
            pointer-events: none;
        }

        .shape-gold {
            background: linear-gradient(135deg, #c9a962 0%, #8b6914 100%);
        }

        .shape-rose {
            background: linear-gradient(135deg, #d4a5a5 0%, #915f5f 100%);
        }

        .shape-terracotta {
            background: linear-gradient(135deg, #c17f59 0%, #8b4513 100%);
        }

        /* ========================================
           TYPOGRAPHY
           ======================================== */
        h1, h2, h3 {
            font-family: 'Cormorant', serif;
            font-weight: 600;
            line-height: 1.1;
            letter-spacing: -0.02em;
        }

        h1 {
            font-size: clamp(3rem, 8vw, 6rem);
        }

        h2 {
            font-size: clamp(2.5rem, 6vw, 4.5rem);
        }

        h3 {
            font-size: clamp(1.75rem, 4vw, 2.5rem);
        }

        p {
            font-size: clamp(1.15rem, 2.5vw, 1.5rem);
            line-height: 1.7;
            color: rgba(245, 240, 232, 0.85);
        }

        .accent {
            color: #c9a962;
        }

        .divider {
            width: 60px;
            height: 1px;
            background: linear-gradient(90deg, transparent, #c9a962, transparent);
            margin: 1.5rem auto;
        }

        /* ========================================
           CONTENT CONTAINERS
           ======================================== */
        .content {
            text-align: center;
            max-width: 900px;
            position: relative;
            z-index: 1;
        }

        .content-left {
            text-align: left;
            max-width: 900px;
            position: relative;
            z-index: 1;
        }

        /* ========================================
           CARDS & GRIDS
           ======================================== */
        .card-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: clamp(1rem, 2vw, 1.5rem);
            max-width: 1000px;
            width: 100%;
        }

        .card {
            background: rgba(245, 240, 232, 0.03);
            border: 1px solid rgba(201, 169, 98, 0.2);
            border-radius: 12px;
            padding: clamp(1.25rem, 2vw, 1.75rem);
            backdrop-filter: blur(10px);
        }

        .card h3 {
            font-size: clamp(1.35rem, 2.5vw, 1.6rem);
            margin-bottom: 0.5rem;
            color: #c9a962;
        }

        .card p {
            font-size: clamp(1.05rem, 2vw, 1.2rem);
            color: rgba(245, 240, 232, 0.7);
        }

        /* ========================================
           STATS & METRICS
           ======================================== */
        .stat-large {
            font-family: 'Cormorant', serif;
            font-size: clamp(5rem, 15vw, 10rem);
            font-weight: 700;
            color: #c9a962;
            line-height: 1;
        }

        .stat-row {
            display: flex;
            justify-content: center;
            gap: clamp(2rem, 5vw, 4rem);
            flex-wrap: wrap;
        }

        .stat-item {
            text-align: center;
        }

        .stat-number {
            font-family: 'Cormorant', serif;
            font-size: clamp(3rem, 7vw, 5rem);
            font-weight: 700;
            color: #c9a962;
        }

        .stat-label {
            font-size: clamp(1rem, 2vw, 1.2rem);
            color: rgba(245, 240, 232, 0.6);
            text-transform: uppercase;
            letter-spacing: 0.1em;
            margin-top: 0.5rem;
        }

        /* ========================================
           LISTS
           ======================================== */
        .feature-list {
            list-style: none;
            text-align: left;
            max-width: 700px;
        }

        .feature-list li {
            padding: clamp(0.75rem, 1.5vw, 1rem) 0;
            border-bottom: 1px solid rgba(201, 169, 98, 0.15);
            font-size: clamp(1.15rem, 2.5vw, 1.35rem);
            display: flex;
            align-items: flex-start;
            gap: 1rem;
        }

        .feature-list li::before {
            content: 'â†’';
            color: #c9a962;
            flex-shrink: 0;
        }

        /* ========================================
           TIMELINE / STEPS
           ======================================== */
        .steps-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: clamp(1rem, 2vw, 2rem);
            max-width: 1000px;
            width: 100%;
        }

        @media (max-width: 768px) {
            .steps-grid {
                grid-template-columns: 1fr 1fr;
            }
        }

        @media (max-width: 500px) {
            .steps-grid {
                grid-template-columns: 1fr;
            }
        }

        .step {
            text-align: left;
        }

        .step-number {
            font-family: 'Cormorant', serif;
            font-size: clamp(2.5rem, 5vw, 3.5rem);
            font-weight: 700;
            color: rgba(201, 169, 98, 0.3);
            line-height: 1;
        }

        .step h3 {
            font-size: clamp(1.2rem, 2.5vw, 1.5rem);
            margin: 0.5rem 0;
            color: #f5f0e8;
        }

        .step p {
            font-size: clamp(1rem, 1.8vw, 1.15rem);
            color: rgba(245, 240, 232, 0.6);
        }

        /* ========================================
           COMPARISON TABLE
           ======================================== */
        .comparison {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: clamp(1.5rem, 3vw, 3rem);
            max-width: 800px;
            width: 100%;
        }

        .comparison-col h3 {
            font-size: clamp(1.5rem, 3vw, 2rem);
            margin-bottom: 1rem;
            padding-bottom: 0.75rem;
            border-bottom: 2px solid;
        }

        .comparison-col.youtube h3 {
            border-color: #c9a962;
            color: #c9a962;
        }

        .comparison-col.blog h3 {
            border-color: rgba(245, 240, 232, 0.3);
            color: rgba(245, 240, 232, 0.5);
        }

        /* ========================================
           CTA BUTTON
           ======================================== */
        .cta-button {
            display: inline-block;
            background: linear-gradient(135deg, #c9a962 0%, #a8893f 100%);
            color: #0f0f0f;
            font-family: 'IBM Plex Sans', sans-serif;
            font-weight: 600;
            font-size: clamp(1.2rem, 2.5vw, 1.4rem);
            padding: clamp(1.1rem, 2.5vw, 1.5rem) clamp(2.5rem, 5vw, 3.5rem);
            border-radius: 8px;
            text-decoration: none;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            margin-top: 2rem;
        }

        .cta-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 40px rgba(201, 169, 98, 0.3);
        }

        /* ========================================
           SLIDE NUMBER
           ======================================== */
        .slide-number {
            position: absolute;
            bottom: clamp(1.5rem, 3vh, 2.5rem);
            right: clamp(1.5rem, 3vw, 2.5rem);
            font-size: 0.75rem;
            color: rgba(245, 240, 232, 0.3);
            letter-spacing: 0.1em;
        }

        /* ========================================
           NAVIGATION
           ======================================== */
        .nav-dots {
            position: fixed;
            right: clamp(1rem, 2vw, 2rem);
            top: 50%;
            transform: translateY(-50%);
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
            z-index: 100;
        }

        .nav-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: rgba(245, 240, 232, 0.2);
            border: 1px solid rgba(245, 240, 232, 0.3);
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .nav-dot:hover,
        .nav-dot.active {
            background: #c9a962;
            border-color: #c9a962;
        }

        /* ========================================
           PRICING
           ======================================== */
        .price-display {
            text-align: center;
        }

        .price {
            font-family: 'Cormorant', serif;
            font-size: clamp(4rem, 12vw, 8rem);
            font-weight: 700;
            color: #c9a962;
        }

        .price-period {
            font-size: clamp(1.2rem, 2.5vw, 1.5rem);
            color: rgba(245, 240, 232, 0.6);
        }

        /* ========================================
           QUOTE STYLE
           ======================================== */
        .quote {
            font-family: 'Cormorant', serif;
            font-size: clamp(1.75rem, 4vw, 2.75rem);
            font-style: italic;
            color: rgba(245, 240, 232, 0.9);
            max-width: 800px;
            text-align: center;
            line-height: 1.5;
        }

        /* ========================================
           ANIMATIONS
           ======================================== */
        .slide .content,
        .slide .content-left,
        .slide .card-grid,
        .slide .steps-grid,
        .slide .comparison {
            opacity: 0;
            transform: translateY(30px);
            transition: opacity 0.8s ease, transform 0.8s ease;
        }

        .slide.visible .content,
        .slide.visible .content-left,
        .slide.visible .card-grid,
        .slide.visible .steps-grid,
        .slide.visible .comparison {
            opacity: 1;
            transform: translateY(0);
        }

        /* Reduced motion */
        @media (prefers-reduced-motion: reduce) {
            .slide .content,
            .slide .content-left,
            .slide .card-grid,
            .slide .steps-grid,
            .slide .comparison {
                opacity: 1;
                transform: none;
                transition: none;
            }
        }
    </style>
</head>
