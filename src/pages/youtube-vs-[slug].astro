  <!-- Article Header -->
  <div class="max-w-3xl mx-auto px-4 sm:px-6 pt-12 pb-10">

    <!-- Breadcrumb -->
    <div class="flex items-center gap-2 text-sm text-gray-500 dark:text-slate-400 mb-8">
      <a href="/" class="hover:text-primary transition-colors">SellOnTube</a>
