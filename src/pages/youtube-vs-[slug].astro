  "@context": "https://schema.org",
  "@type": "Article",
  "headline": comparison.heroTitle,
  "author": {
    "@type": "Person",
    "name": "Gautham",
    "jobTitle": "Founder, SellOnTube"
  },
  "publisher": {
    "@type": "Organization",
