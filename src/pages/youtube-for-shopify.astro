---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import Steps from '~/components/widgets/Steps.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Note from '~/components/widgets/Note.astro';

const metadata = {
  title: 'YouTube Marketing for Shopify Apps | SellOnTube',
  description: 'Turn YouTube into a bottom-of-funnel acquisition channel for your Shopify app. Capture high-intent search demand and convert it into app installs, demos, and qualified signups.',
};

const calLink = 'https://cal.com/gautham-8bdvdx/30min';

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Is YouTube really bottom-of-funnel?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, when built around search intent, not subscribers or trends."
      }
    },
    {
      "@type": "Question",
      "name": "How long until results?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Early traction can appear in weeks. Compounding impact builds over months."
      }
    },
    {
      "@type": "Question",
      "name": "We tried content before. Why is this different?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Most content fails because it's not tied to buying-intent queries."
      }
    },
    {
      "@type": "Question",
      "name": "Is our niche too small?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Smaller niches often convert better due to lower competition."
      }
    },
    {
      "@type": "Question",
      "name": "Do you handle everything?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "We handle strategy, research, and video creation. You provide product context and approvals."
      }
    },
    {
      "@type": "Question",
      "name": "Is this a replacement for ads?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "No. It's a complementary acquisition layer that reduces long-term dependency."
      }
    }
  ]
};
---

<Layout metadata={metadata}>
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  <!-- Hero Section -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Book a 30-min Shopify App Growth Call',
        href: calLink,
        target: '_blank',
        rel: 'noopener noreferrer',
      },
      {
        text: 'See How It Works',
        href: '#system',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?auto=format&fit=crop&w=2070&q=80',
      alt: 'E-commerce customer acquisition',
    }}
  >
    <Fragment slot="title">
      Turn YouTube into a <span class="text-accent">bottom-of-funnel</span> acquisition channel for your Shopify app
    </Fragment>
    <Fragment slot="subtitle">
      <span class="block mb-1 font-semibold text-primary">For Shopify App Companies</span>
      We capture high-intent search demand on YouTube and convert it into app installs, demos, and qualified signups.
    </Fragment>
  </Hero>

  <!-- Philosophy Note -->
  <Note
    title="Our Approach:"
    description="Search-driven acquisition. Not content marketing. Not brand awareness. Demand capture."
  />

  <!-- Who This Is For (and Not For) -->
  <section class="py-16 md:py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12">
        <p class="text-sm font-semibold uppercase tracking-wider text-primary mb-2">Fit Check</p>
        <h2 class="text-3xl md:text-4xl font-bold">Who This Is For (and Not For)</h2>
      </div>

      <div class="grid md:grid-cols-2 gap-6 lg:gap-8">
