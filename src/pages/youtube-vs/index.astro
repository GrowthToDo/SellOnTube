---
import { comparisons } from '~/data/comparisons';
import Layout from '~/layouts/PageLayout.astro';
import { SITE } from 'astrowind:config';

const siteUrl = SITE.site || 'https://sellontube.com';
const calLink = 'https://cal.com/gautham-8bdvdx/30min';

const metadata = {
  title: 'YouTube vs Every Marketing Channel: Honest Comparisons | SellOnTube',
  description: 'YouTube compared against 20 marketing channels including LinkedIn, Instagram, TikTok, paid ads, email, SEO, podcasting, and more. See which channel wins for your business.',
  canonical: `${siteUrl}/youtube-vs`,
  robots: { index: true, follow: true },
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
