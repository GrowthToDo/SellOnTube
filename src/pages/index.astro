---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'SellOnTube — Acquire customers from YouTube without recording',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Book a Diagnostic Call',
        href: '#',
      },
      {
        text: 'See How It Works →',
        href: '#process',
      },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'SellOnTube Hero Image' }}
  >
    <Fragment slot="title">
      We acquire customers for your business through YouTube - without you recording a single video..
    </Fragment>
    <Fragment slot="subtitle">
      We handle strategy, scripting, voiceover, visual production, editing, publishing, and optimization. You get
      qualified leads and customers without appearing on camera or building a studio.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note
    title="Philosophy:"
    description="Zero recording. End-to-end execution. Voiceover-driven, conversion-focused videos."
  />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="What we do"
    title="Done-for-you YouTube customer acquisition"
    subtitle="SellOnTube is a done-for-you YouTube acquisition engine. We turn your expertise into high-performing voiceover-led videos, publish them on your channel, and optimize them for predictable customer acquisition - without requiring you to get on camera."
    items={[
      {
        title: 'No on-camera recording',
        description:
          'Our videos use crafted voiceover and purposeful visuals - not talking heads, not AI-generated templates.',
        icon: 'tabler:video',
      },
      {
        title: 'End-to-end production',
        description:
          'Research, scripts, voiceover, visuals, editing, thumbnails, SEO optimization, and publishing: everything done for you.',
        icon: 'tabler:device-tv',
      },
      {
        title: 'Customer-focused videos',
        description:
          'Explainer-style videos engineered to rank for high-intent queries and convert viewers into leads and customers.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Consistent output',
        description:
          'High-quality monthly videos that compound in value - like SEO assets.',
        icon: 'tabler:calendar-stats',
      },
      {
        title: 'Clear ROI',
        description:
          'Monthly insights showing rankings, leads, and conversions driven by your YouTube channel.',
        icon: 'tabler:report-analytics',
      },
      {
        title: 'Strategy first',
        description:
          'We only proceed if our upfront analysis shows YouTube can be a profitable channel for you.',
        icon: 'tabler:target',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="How we think"
    title="YouTube as a serious acquisition channel, not content for content's sake"
    items={[
      {
        title: 'Acquisition-first, not creator-first',
        description:
          'We design your channel around customer acquisition and business math, not entertainment or personality-driven content.',
      },
      {
        title: 'Compounding like SEO',
        description:
          'Strategic voiceover-led videos behave like evergreen SEO assets. They keep bringing the right people in, month after month.',
      },
      {
        title: 'Low friction for founders',
        description:
          'You never need to get on camera, learn filming, or become a creator. We deliberately keep your involvement light.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?auto=format&fit=crop&w=2070&q=80',
      alt: 'Strategy Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Built for founders who want customers, not a YouTube hobby
      </h3>
      We treat your channel like an acquisition asset that should pay for itself.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    tagline="Who this is for"
    title="When SellOnTube makes the most sense"
    items={[
      {
        title: 'Search-driven businesses',
        description:
          'Your customers actively search online for solutions like yours - software products, agencies, courses, consultants, high-ticket services, info products.',
      },
      {
        title: 'Meaningful revenue per customer',
        description:
          'Your economics support a channel that compounds and pays for itself over time.',
      },
      {
        title: 'Long-term compounding mindset',
        description:
          'You understand that YouTube behaves like SEO. Compounding value, not instant gratification.',
      },
      {
        title: 'You’re done DIY-ing YouTube',
        description:
          'You don’t want freelancers, inconsistent editors, or random tactics. You want a single accountable engine.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1600132806370-bf17e65e942f?auto=format&fit=crop&w=2194&q=80',
      alt: 'Blueprint Image',
    }}
  >
    <Fragment slot="content">
      If you see YouTube as a growth channel, not a side project, you’re in the right place.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    tagline="What you get"
    title="A fully managed YouTube acquisition engine"
    items={[
      {
        title: 'Channel strategy & planning',
        description:
          'Positioning, messaging, topic selection, and prioritization rooted in your business goals.',
      },
      {
        title: 'End-to-end video production',
        description:
          'Scriptwriting, professional voiceover, storyboarded visuals, editing, thumbnails, SEO optimization, and publishing.',
      },
      {
        title: 'Consistent publishing cadence',
        description:
          'A predictable flow of acquisition-focused videos each month, without you having to chase anyone.',
      },
      {
        title: 'Reporting & iteration',
        description:
          'Clear updates on what’s working, what’s not, and how we’re adjusting to improve performance.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1611462985358-60d3498e0364?auto=format&fit=crop&w=2070&q=80',
      alt: 'Operations Image',
    }}
  >
    <Fragment slot="content">
      You get a channel that works without you ever needing to step in front of a camera.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="How SellOnTube works"
    items={[
      {
        title: 'Step 1: Diagnostic call',
        description:
          'We understand your business, customers, and growth goals to determine if YouTube is a good fit.',
        icon: 'tabler:phone',
      },
      {
        title: 'Step 2: Opportunity analysis',
        description:
          'We evaluate your market, competitors, and search demand to confirm YouTube can be profitable.',
        icon: 'tabler:search',
      },
      {
        title: 'Step 3: Acquisition blueprint',
        description:
          'We design a YouTube strategy focused on high-intent topics that attract ready-to-buy customers.',
        icon: 'tabler:route',
      },
      {
        title: 'Step 4: End-to-end production',
        description:
          'We produce all videos using crafted voiceover and visual storytelling',
        icon: 'tabler:movie',
      },
      {
        title: 'Step 5: Publishing & optimization',
        description:
          'We publish your videos, optimize titles, descriptions, thumbnails, and track rankings and engagement.',
        icon: 'tabler:upload',
      },
      {
        title: 'Step 6: Reporting & iteration',
        description:
          'You receive clear reports on leads and performance while we keep improving the engine.',
        icon: 'tabler:chart-bar',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="What we take off your plate"
    subtitle="You don’t need a YouTube playbook, production team, or creator ambitions. We bring all of that."
    tagline="Execution"
    items={[
      {
        title: 'Strategy',
        description: 'We decide what should be published, when, and why - aligned with your goals.',
        icon: 'flat-color-icons:template',
      },
      {
        title: 'Scripting',
        description:
          'We turn your expertise and inputs into clear, compelling scripts designed to convert.',
        icon: 'flat-color-icons:document',
      },
      {
        title: 'Voiceover production',
        description:
          'Professional voiceover artists narrate your videos. Founder recordings not mandatory.',
        icon: 'flat-color-icons:voice-presentation',
      },
      {
        title: 'Editing & packaging',
        description:
          'We handle editing, pacing, motion graphics, and visuals that keep viewers engaged.',
        icon: 'flat-color-icons:gallery',
      },
      {
        title: 'SEO & optimization',
        description:
          'Titles, descriptions, tags, and thumbnails tuned for search and clicks - not random guesswork.',
        icon: 'flat-color-icons:advertising',
      },
      {
        title: 'Publishing & reporting',
        description:
          'Videos go live on your channel, and you get clear, concise performance updates.',
        icon: 'flat-color-icons:business-contact',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Learn how to acquire customers from YouTube"
    information={`We use the blog to break down real YouTube customer-acquisition playbooks.
                        Expect deep dives on strategy, examples of high-performing videos, and honest breakdowns of what actually works.
                        No fluff, no “creator tips”. Just concrete lessons for founders and marketers who want customers from YouTube.
                `}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Clear answers for founders and marketers who want customers from YouTube without becoming creators."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Do I need to be on camera or record anything?',
        description:
          'No. We use professional voiceover and visual storytelling. You never need to appear on camera unless you want to.',
      },
      {
        title: 'What kind of businesses does SellOnTube work best for?',
        description:
          'We work best with businesses where customers actively search online for solutions - software products, agencies, consultants, high-ticket services, courses and info products. Our diagnostic call confirms whether YouTube can realistically become a profitable acquisition channel for you.',
      },
      {
        title: 'How long before I start seeing results?',
        description:
          'YouTube behaves like SEO. Early wins are possible, but compounding value is where it becomes unfair. We aim for meaningful traction within 60 to 90 days.',
      },
      {
        title: 'What exactly do you handle end-to-end?',
        description:
          'Research, scripting, voiceover, visuals, editing, thumbnails, SEO, publishing, and reporting. You focus on your business. We handle the YouTube acquisition engine.',
      },
      {
        title: 'How do you decide if YouTube is a good fit for my business?',
        description:
          'We analyse your market, offer, pricing, search demand, and customer behaviour. If the economics don’t support profitable acquisition, we will tell you upfront.',
      },
      {
        title: 'What does working together look like month to month?',
        description:
          'Each month we align on topics, collect inputs from you in low-friction ways (calls, docs), and then our team handles the full production and publishing cycle.',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
  stats={[
    { title: 'Founder recording time (per month)', amount: '0' },
    { title: 'On-camera presence needed', amount: '0' },
    { title: 'Videos produced per month', amount: '4' },
    { title: 'Primary goal', amount: 'Leads' },
  ]}
/>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Book a Diagnostic Call',
        href: '#',
      },
      {
        text: 'See the Full Process →',
        href: '#process',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to acquire customers from YouTube, without appearing on camera?
    </Fragment>

    <Fragment slot="subtitle">
      Book a diagnostic call and we’ll evaluate whether YouTube can be your most profitable customer acquisition channel
      using voiceover-driven videos - completely done-for-you.
    </Fragment>
  </CallToAction>
</Layout>