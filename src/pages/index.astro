---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'SellOnTube — Acquire customers from YouTube without recording',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Book a Diagnostic Call',
        href: '#', // TODO: replace with your Calendly link
      },
      {
        text: 'See How It Works →',
        href: '#process', // later you can point this to a /process page
      },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'SellOnTube Hero Image' }}
  >
    <Fragment slot="title">
      We acquire customers for your business using YouTube — without you recording a single video.
    </Fragment>
    <Fragment slot="subtitle">
      We handle strategy, scripting, on-screen talent, video creation, editing, publishing, and optimization. You get
      qualified leads and customers — without touching a camera.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note
    title="Philosophy:"
    description="Zero recording. End-to-end execution. You focus on your business while YouTube quietly acquires customers for you."
  />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="What we do"
    title="Done-for-you YouTube customer acquisition"
    subtitle="SellOnTube is a done-for-you YouTube acquisition engine. We take your expertise, turn it into high-performing videos, publish them on your channel, and optimize them for predictable customer acquisition — without requiring you to record anything."
    items={[
      {
        title: 'No recording needed',
        description:
          'We handle scripting, on-screen talent, editing, and publishing — you never appear on camera.',
        icon: 'tabler:video',
      },
      {
        title: 'End-to-end production',
        description:
          'Research, scripts, filming, thumbnails, SEO optimization, and publishing: everything done for you.',
        icon: 'tabler:device-tv',
      },
      {
        title: 'Customer-focused videos',
        description:
          'Videos engineered to rank for high-intent queries and convert viewers into leads and customers.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Consistent output',
        description:
          'High-quality monthly content that compounds in value over time.',
        icon: 'tabler:calendar-stats',
      },
      {
        title: 'Clear ROI',
        description:
          'Monthly insights showing rankings, leads, and conversions driven by your YouTube channel.',
        icon: 'tabler:report-analytics',
      },
      {
        title: 'Strategy first',
        description:
          'We only proceed if our upfront analysis shows YouTube can be a profitable channel for you.',
        icon: 'tabler:target',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="How we think"
    title="YouTube as a serious acquisition channel, not content for content’s sake"
    items={[
      {
        title: 'Acquisition-first, not creator-first',
        description:
          'We design your channel around customer acquisition and business math, not vanity metrics or entertainment.',
      },
      {
        title: 'Compounding like SEO',
        description:
          'Strategic videos behave like evergreen SEO assets — they keep bringing the right people in, month after month.',
      },
      {
        title: 'Low friction for founders',
        description:
          'You don’t need to build a studio, learn scripting, or become a creator. We deliberately keep your involvement light.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Strategy Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Built for founders who want customers, not a YouTube hobby
      </h3>
      We treat your channel like an acquisition asset that should pay for itself — not a social media side project.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    tagline="Who this is for"
    title="When SellOnTube makes the most sense"
    items={[
      {
        title: 'Search-driven businesses',
        description:
          'Your customers actively search online for solutions like yours — SaaS, agencies, consultants, high-ticket services, info products.',
      },
      {
        title: 'Meaningful revenue per customer',
        description:
          'You make enough per customer for a serious acquisition channel to be worth investing in.',
      },
      {
        title: 'Long-term compounding mindset',
        description:
          'You understand that YouTube behaves more like SEO than ads — early results are great, but compounding is where it gets unfair.',
      },
      {
        title: 'You’re done DIY-ing YouTube',
        description:
          'You don’t want to experiment endlessly with freelancers or random tactics. You want a single accountable team.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1600132806370-bf17e65e942f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2194&q=80',
      alt: 'Blueprint Image',
    }}
  >
    <Fragment slot="content">If you see YouTube as a growth channel, not a side project, you’re in the right place.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    tagline="What you get"
    title="A fully managed YouTube acquisition engine"
    items={[
      {
        title: 'Channel strategy & planning',
        description:
          'Positioning, messaging, topic selection, and prioritization rooted in your business goals.',
      },
      {
        title: 'End-to-end video production',
        description:
          'On-screen talent, scripting, recording, editing, thumbnails, SEO optimization, and publishing.',
      },
      {
        title: 'Consistent publishing cadence',
        description:
          'A predictable flow of videos each month, without you having to chase anyone.',
      },
      {
        title: 'Reporting & iteration',
        description:
          'Clear updates on what’s working, what’s not, and how we’re adjusting to improve performance.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1611462985358-60d3498e0364?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Operations Image',
    }}
  >
    <Fragment slot="content">You get a channel that works for you even when you’re not thinking about YouTube.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="How SellOnTube works"
    items={[
      {
        title: 'Step 1: Diagnostic call',
        description:
          'We understand your business, customers, and growth goals to determine if YouTube is a good fit.',
        icon: 'tabler:phone',
      },
      {
        title: 'Step 2: Opportunity analysis',
        description:
          'We evaluate your market, competitors, and search demand to confirm that YouTube can be profitable.',
        icon: 'tabler:search',
      },
      {
        title: 'Step 3: Acquisition blueprint',
        description:
          'We design a YouTube strategy focused on high-intent topics that attract ready-to-buy customers.',
        icon: 'tabler:route',
      },
      {
        title: 'Step 4: End-to-end production',
        description:
          'We produce all your videos using our on-screen talent — you never need to record anything.',
        icon: 'tabler:movie',
      },
      {
        title: 'Step 5: Publishing & optimization',
        description:
          'We publish your videos, optimize titles, descriptions, and thumbnails, and track rankings and engagement.',
        icon: 'tabler:upload',
      },
      {
        title: 'Step 6: Reporting & iteration',
        description:
          'You receive clear reports on leads and performance while we keep iterating on what works.',
        icon: 'tabler:chart-bar',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="What we take off your plate"
    subtitle="You don’t need a YouTube playbook, production team, or creator ambitions. We bring all of that."
    tagline="Execution"
    items={[
      {
        title: 'Strategy',
        description: 'We decide what should be published, when, and why — aligned with your goals.',
        icon: 'flat-color-icons:template',
      },
      {
        title: 'Scripting',
        description:
          'We turn your expertise and inputs into clear, compelling scripts designed to convert.',
        icon: 'flat-color-icons:document',
      },
      {
        title: 'On-screen talent',
        description:
          'We use our own talent or formats so you never need to be on camera unless you want to.',
        icon: 'flat-color-icons:voice-presentation',
      },
      {
        title: 'Editing & packaging',
        description:
          'We handle editing, pacing, motion, and everything needed to keep viewers watching.',
        icon: 'flat-color-icons:gallery',
      },
      {
        title: 'SEO & optimization',
        description:
          'Titles, descriptions, tags, and thumbnails tuned for search and clicks — not random guesswork.',
        icon: 'flat-color-icons:advertising',
      },
      {
        title: 'Publishing & reporting',
        description:
          'Videos go live on your channel, and you get clear, concise performance updates.',
        icon: 'flat-color-icons:business-contact',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Learn how to acquire customers from YouTube"
    information={`We use the blog to break down real YouTube customer-acquisition playbooks.
                        Expect deep dives on strategy, examples of high-performing videos, and honest breakdowns of what actually works.
                        No fluff, no “creator tips” — just concrete lessons for founders and marketers who want customers from YouTube.
                `}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Clear answers for founders and marketers who want customers from YouTube without becoming creators."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Do I need to be on camera or record anything?',
        description:
          'No. Our model is fully done-for-you. We handle scripting, on-screen talent, production, editing, and publishing. You do not need to record yourself or appear on camera unless you specifically want to.',
      },
      {
        title: 'What kind of businesses does SellOnTube work best for?',
        description:
          'We work best with businesses where customers actively search for solutions online — SaaS, agencies, consultants, high-ticket services, and info products. On the diagnostic call we evaluate if YouTube can realistically become a profitable acquisition channel for you.',
      },
      {
        title: 'How long before I start seeing results?',
        description:
          'YouTube is closer to SEO than paid ads. Some videos can start generating leads quickly, but the real power is in compounding. We aim for early traction in the first 60–90 days, with meaningful, repeatable results building over the next 6–12 months.',
      },
      {
        title: 'What exactly do you handle end-to-end?',
        description:
          'We handle strategy, research, scripting, filming with our own on-screen talent, editing, thumbnails, SEO optimization (titles, descriptions, tags), publishing on your channel, and ongoing performance optimization and reporting.',
      },
      {
        title: 'How do you decide if YouTube is a good fit for my business?',
        description:
          'Before we work together, we run an opportunity and ROI analysis based on your market, offer, pricing, and how your customers currently find you. If we don’t believe YouTube can be a profitable channel for you, we’ll tell you directly instead of forcing a bad fit.',
      },
      {
        title: 'What does working together look like month to month?',
        description:
          'You have a recurring content and strategy cadence with us: we align on topics, collect information from you in low-friction ways (calls, docs, existing material), and then our team handles production and publishing. Each month you receive performance updates and we refine the strategy based on what’s working.',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Founder recording time', amount: '0 hrs/month' },
      { title: 'YouTube workload on your side', amount: 'Minimal' },
      { title: 'Videos produced for you', amount: 'Fully managed' },
      { title: 'Primary goal', amount: 'Predictable customers' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Book a Diagnostic Call',
        href: '#', // TODO: replace with Calendly
      },
      {
        text: 'See the Full Process →',
        href: '#process',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to acquire customers from YouTube — without recording a single video?
    </Fragment>

    <Fragment slot="subtitle">
      Book a diagnostic call and we’ll evaluate whether YouTube can be your most profitable customer acquisition channel
      — completely done-for-you.
    </Fragment>
  </CallToAction>
</Layout>