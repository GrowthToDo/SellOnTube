---
// Chart showing YouTube's widening advantage over the blog
---

<div class="my-8 p-6 bg-white dark:bg-slate-800 rounded-xl shadow-lg">
  <h3 class="text-xl font-bold text-center mb-4 text-gray-900 dark:text-white">YouTube's Widening Advantage</h3>
  <div class="relative" style="height: 300px;">
    <canvas id="advantageGrowthChart"></canvas>
  </div>
  <p class="text-center text-sm text-gray-500 dark:text-gray-400 mt-4">
    The gap didn't just stay consistent - it <span class="font-bold text-red-600">doubled</span> from 2.5x to 4.9x
  </p>
</div>

<script>
  import { Chart, LineController, LineElement, PointElement, CategoryScale, LinearScale, Tooltip, Legend, Filler } from 'chart.js';

  Chart.register(LineController, LineElement, PointElement, CategoryScale, LinearScale, Tooltip, Legend, Filler);

  const ctx = document.getElementById('advantageGrowthChart') as HTMLCanvasElement;

  // Create gradient
  const gradient = ctx.getContext('2d')!.createLinearGradient(0, 0, 0, 300);
  gradient.addColorStop(0, 'rgba(255, 0, 0, 0.4)');
  gradient.addColorStop(1, 'rgba(255, 0, 0, 0.05)');

  new Chart(ctx, {
    type: 'line',
    data: {
      labels: ['Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec', 'Jan', 'Feb', 'Mar', 'Apr', 'May'],
      datasets: [{
        label: 'YouTube Advantage (x)',
        data: [2.5, 2.6, 2.6, 2.9, 2.9, 3.1, 3.3, 3.6, 3.9, 3.9, 3.9, 4.9],
        borderColor: 'rgba(255, 0, 0, 1)',
        backgroundColor: gradient,
        borderWidth: 4,
        fill: true,
        tension: 0.4,
        pointBackgroundColor: 'rgba(255, 0, 0, 1)',
        pointBorderColor: '#fff',
        pointBorderWidth: 3,
        pointRadius: 6,
        pointHoverRadius: 9
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          display: false
        },
        tooltip: {
          callbacks: {
            label: function(context) {
              return `YouTube outperformed by ${context.parsed.y}x`;
            }
          }
        }
      },
      scales: {
        y: {
          beginAtZero: true,
          max: 6,
          ticks: {
            callback: function(value) {
              return value + 'x';
            },
            stepSize: 1
          },
          grid: {
            color: 'rgba(0, 0, 0, 0.1)'
          }
        },
        x: {
          grid: {
            display: false
          }
        }
      }
    }
  });
</script>
